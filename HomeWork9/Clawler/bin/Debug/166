<span style="color: rgba(0, 128, 128, 1)"> 3</span> #include &lt;boost/shared_ptr.hpp&gt;
<span style="color: rgba(0, 128, 128, 1)"> 4</span> #include &lt;boost/weak_ptr.hpp&gt;
<span style="color: rgba(0, 128, 128, 1)"> 5</span> 
